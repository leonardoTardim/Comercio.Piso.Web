@model IEnumerable<Comercio.Piso.Web.Models.Cliente>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "Clientes")" class="btn btn-default">Criar</a> 
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NomeCliente)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeCompletoRazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ApelidoNomeFantasia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CPFCNPJ)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCliente)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeCompletoRazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ApelidoNomeFantasia)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CPFCNPJ)
        </td>
        <td>
            <a href="@Url.Action("Edit", new { id=item.Id })" class="btn btn-warning">Editar</a>|
            <a href="@Url.Action("Details", new { id=item.Id })" class="btn btn-info">Detalhes</a>|
            <a href="@Url.Action("Delete", new { id=item.Id })" class="btn btn-danger">Delete</a>
            
        </td>
    </tr>
}

</table>
